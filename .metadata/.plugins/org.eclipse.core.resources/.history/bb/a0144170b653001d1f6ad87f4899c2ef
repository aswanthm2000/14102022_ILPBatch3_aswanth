package com.ilp.basicprogrammingassignment;

import java.util.Scanner;

public class BasicAssignment17 {

	public static void main(String[] args) {
		System.out.println("***** Count Number Of Words In a String*******");

		Scanner scanner = new Scanner(System.in);
		System.out.println("Enter a String");
		String String = scanner.nextLine();
		String[] wordsArray = String.split("\\s+");// to split based on whitespace
		System.out.println("The number of words in the string is\n" + wordsArray.length);
	}
}


